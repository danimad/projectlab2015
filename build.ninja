builddir = build

cflags = -std=c++11 -Wall -pedantic
ldflags = -L/usr/local/opt/llvm/lib
cppflags = -I/usr/local/opt/llvm/include

cxx = g++-5 -g -pg

rule cc
    command = $cxx $cflags $ldflags $cppflags -c $in -o $out

